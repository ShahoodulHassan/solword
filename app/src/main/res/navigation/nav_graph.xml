<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment"
    >

    <fragment
        android:id="@+id/inputFragment"
        android:name="com.appicacious.solword.fragments.InputFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_input" >
        <action
            android:id="@+id/action_inputFragment_to_guessFragment"
            app:destination="@id/guessFragment"
            />
        <action
            android:id="@+id/action_inputFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            />
        <action
            android:id="@+id/action_inputFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            />

        <action
            android:id="@+id/action_inputFragment_to_introFragment"
            app:destination="@id/introFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/guessFragment"
        android:name="com.appicacious.solword.fragments.GuessFragment"
        android:label="Guesses"
        tools:layout="@layout/fragment_guess" >
        <argument
            android:name="mCells"
            app:argType="com.appicacious.solword.models.Cell[]" />
        <argument
            android:name="mCellsJson"
            app:argType="string"
            android:defaultValue='""' />
        <action
            android:id="@+id/action_guessFragment_to_introFragment"
            app:destination="@id/introFragment" />
        <argument
            android:name="mAttemptCount"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.appicacious.solword.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"
        />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.appicacious.solword.fragments.AboutFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_about"
        />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.appicacious.solword.fragments.SplashFragment"
        android:label=""
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_inputFragment"
            app:destination="@id/inputFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_splashFragment_to_introFragment"
            app:destination="@id/introFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.appicacious.solword.fragments.IntroFragment"
        android:label=""
        tools:layout="@layout/fragment_intro">
        <action
            android:id="@+id/action_introFragment_to_inputFragment"
            app:destination="@id/inputFragment"
            app:popUpTo="@id/introFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="mMode"
            android:defaultValue="11"
            app:argType="integer" />
    </fragment>
</navigation>