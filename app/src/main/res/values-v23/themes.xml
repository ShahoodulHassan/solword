<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <!--This is responsible for defining custom theme for the preference fragment-->
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <!-- Alert dialog theme -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <!-- Customize your theme here. -->
        <!-- For BottomSheetDialogFragment rounded corners -->
        <!--        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.BottomSheetDialog</item>-->
        <item name="shapeAppearanceLargeComponent">@style/BsRoundedCornersTheme</item>
        <!-- For all other dialogs -->
        <item name="shapeAppearanceMediumComponent">@style/DialogRoundedCornersTheme</item>

        <!-- To disable the dark mode. I also had to remove the themes.xml in values-night folder
        and switch the DayNight variant to Light in parent theme above       -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

</resources>