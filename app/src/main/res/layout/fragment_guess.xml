<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_parent_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GuessFragment">


    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <!-- paddingEnd is the same as the layoutWidth of v_gradient -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_guess_filters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:paddingStart="2.5dp"
            android:paddingEnd="@dimen/gradient_width"
            android:clipToPadding="false"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_operator"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_guess_filter"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

        <View
            android:id="@+id/v_gradient"
            android:layout_width="@dimen/gradient_width"
            android:layout_height="0dp"
            android:alpha="0.6"
            android:background="@drawable/bg_filters"
            app:layout_constraintTop_toTopOf="@id/rv_guess_filters"
            app:layout_constraintEnd_toEndOf="@id/rv_guess_filters"
            app:layout_constraintBottom_toBottomOf="@id/rv_guess_filters"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_operator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/sqlite_and"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_bold"
            android:background="@drawable/bg_touch_ripple"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/rv_guess_filters"
            app:layout_constraintDimensionRatio="1.2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rv_guess_filters"
            app:layout_constraintBottom_toBottomOf="@id/rv_guess_filters"
            />

        <View
            android:id="@+id/v_separator"
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="@color/color_keys"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_guess_filters"
            />

<!--        <View-->
<!--            android:id="@+id/v_separator_2"-->
<!--            android:layout_width="1.0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_marginEnd="5dp"-->
<!--            android:background="@color/color_keys"-->
<!--            app:layout_constraintTop_toTopOf="@id/tv_and"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/tv_and"-->
<!--            app:layout_constraintEnd_toStartOf="@id/tv_and"-->
<!--            />-->

        <androidx.constraintlayout.widget.Group
            android:id="@+id/g_guess_filters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible"
            app:constraint_referenced_ids="rv_guess_filters, v_separator, tv_operator, v_gradient"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_guesses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/v_separator"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_guess"
            android:paddingStart="@dimen/rv_padding_x"
            android:paddingEnd="@dimen/rv_padding_x"
            android:paddingTop="@dimen/rv_padding_x"
            android:paddingBottom="@dimen/dp_40"
            android:scrollbars="none"
            android:clipToPadding="false"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:spanCount="2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_guess_overlay"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>