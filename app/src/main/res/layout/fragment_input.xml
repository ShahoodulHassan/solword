            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:clipToPadding="false"
            android:overScrollMode="ifContentScrolls"
            android:paddingHorizontal="@dimen/rv_padding_x"
            android:paddingTop="@dimen/rv_padding_x"
            android:paddingBottom="@dimen/size_input_fab"
            android:scrollbars="none"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/max_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label_word_size"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent="0.95"
            tools:itemCount="30"
            tools:layoutManager="GridLayoutManager"
            tools:listitem="@layout/item_cell"
            tools:spanCount="5" />

