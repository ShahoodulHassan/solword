                app:layout_constraintTop_toBottomOf="@id/mb_a" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_b"
                style="@style/KeyboardButtonStyle"
                android:text="B"
                app:layout_constraintEnd_toStartOf="@id/mb_n"
                app:layout_constraintStart_toEndOf="@id/mb_v"
                app:layout_constraintTop_toBottomOf="@id/mb_a" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_n"
                style="@style/KeyboardButtonStyle"
                android:text="N"
                app:layout_constraintEnd_toStartOf="@id/mb_m"
                app:layout_constraintStart_toEndOf="@id/mb_b"
                app:layout_constraintTop_toBottomOf="@id/mb_a" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_m"
                style="@style/KeyboardButtonStyle"
                android:text="M"
                app:layout_constraintEnd_toStartOf="@id/fl_back"
                app:layout_constraintStart_toEndOf="@id/mb_n"
                app:layout_constraintTop_toBottomOf="@id/mb_a" />

            <!-- Elevation to 2dp has been added to match its height with other buttons -->
            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"
                android:background="@drawable/bg_round_4dp"
                app:layout_constraintBottom_toBottomOf="@id/mb_m"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/mb_m"
                app:layout_constraintTop_toTopOf="@id/mb_m">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintWidth_max="50dp"
                    app:srcCompat="@drawable/ic_outline_backspace_24"

                    />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_dev_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
